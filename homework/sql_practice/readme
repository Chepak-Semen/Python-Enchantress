# POST /users
# body
{
    "name": "Illia",
    "email": "illia.sukonnik@gmail.com",
}
# response
{
    "user_id": 1,
    "resistration_timestamp": '2021-02-08T14:16:41.892824'
}
######################################################################
# GET /users/1
# response
{
    "name": "Illia",
    "email": "illia.sukonnik@gmail.com",
    "user_id": 1,
    "resistration_timestamp": '2021-02-08T14:16:41.892824',
}
# in case there is no such user we throw an error
# error 404
{
    "error": "no such user with id 1"
}
######################################################################
# PUT /users/1
{
    "name": "Illia",
    "email": "illia.sukonnik@example.com",
}
# response 200
{
    "status": "success"
}

# in case there is no such user we throw an error
# error 404
{
    "error": "no such user with id 1"
}

######################################################################
# DELETE /users/1
# response 200
{
    "status": "success"
}

# in case there is no such user we throw an error
# error 404
{
    "error": "no such user with id 1"
}
